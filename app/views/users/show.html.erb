<h1>Welcome <%= @current_user.email %></h1>

<div class="row">
  <div class="col-md-6">
    <p>How are you  doing today <%= @current_user.email %> doing today?</p>
  </div>
    <%= render 'items/form', item: Item.new, user: @current_user %>
</div>

<div class="row">
  <div class="list- col-md-3 pull-left">
    <h3 class="media-heading">
      <div class="media-body">
        <table class="table">
          <thead>
            <tr>
              <th>To Do Items</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <%= render @items %>
            </tr>
          </tbody>
        </table>
      </div>
    </h3>
  </div>
</div>