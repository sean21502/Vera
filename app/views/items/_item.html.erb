<tbody>
  <%= content_tag :tr, class: "item", id: "item-#{item.id}" do %>
    <td>
    	<%= item.name %>
    </td>
    <td> (item expires in: <%= distance_of_time_in_words(item.created_at + 7.days, Date.today) %> on <%=item.created_at + 7.days %>) </td>
    <td><%= link_to "", [current_user, item], method: :delete, class: 'glyphicon glyphicon-ok', remote: true %></td>
  <% end %>
</tbody>